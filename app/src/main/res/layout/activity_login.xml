<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/txtDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"

        android:text="ĐĂNG NHẬP" />

    <TextView
        android:id="@+id/txtErrEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E70C0C"
        android:visibility="gone"
        android:text="* Email là bắt buộc" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Email"
        android:textColorHint="#898686"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txtErrPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#E70C0C"
        android:text="* Mật khẩu là bắt buộc" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:hint="Password"
        android:textColorHint="#898686"/>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#A123DB"
        android:text="Đăng Nhập" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:text="Nếu bạn không có tài khoản," />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:textColor="#16B5C5"
            android:text="đăng ký" />
    </LinearLayout>

</LinearLayout>